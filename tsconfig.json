{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "dist",
  },
  "exclude": ["__tests__/**/*", "examples/**/*"],
  "include": ["src/**/*"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
